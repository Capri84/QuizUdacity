<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/questions_color</item>
        <item name="colorPrimaryDark">@color/questions_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Name field margins-->
    <style name="NameFieldMargins">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- Quiz night margins-->
    <style name="QuizNightMargins">
        <item name="android:layout_marginTop">@dimen/layout_margin4</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--INVENTIONS QUIZ STYLES-->

    <!-- Inventions header-->
    <style name="HeaderStyle">
        <item name="android:layout_marginBottom">@dimen/padding1</item>
        <item name="android:layout_marginTop">@dimen/padding1</item>
        <item name="android:fontFamily">@font/theroots</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/inv_borders1</item>
        <item name="android:textSize">@dimen/inv_quiz_text_size</item>
    </style>

    <!-- Inventions question number-->
    <style name="QuestionNumberStyle">
        <item name="android:layout_marginBottom">@dimen/padding1</item>
        <item name="android:layout_marginTop">@dimen/layout_margin3</item>
        <item name="android:fontFamily">@font/quiz_font1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">@dimen/text_size2</item>
    </style>

    <!-- Inventions questions style-->
    <style name="QuestionsStyle">
        <item name="android:textSize">@dimen/text_size2</item>
        <item name="android:textColor">@color/ny_Accent</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:background">@drawable/inv_borders</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:layout_margin">@dimen/layout_margin3</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Inventions answers style-->
    <style name="AnswersStyle">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- Inventions TextView answer/question style-->
    <style name="TvAnswersStyle">
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Inventions comments style-->
    <style name="QuestionCommentStyle">
        <item name="android:textSize">@dimen/text_size2</item>
        <item name="android:textColor">@color/ny_Accent</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:background">@drawable/inv_borders</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:layout_margin">@dimen/layout_margin3</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Inventions buttons style-->
    <style name="ButtonsStyle">
        <item name="android:background">@drawable/inv_borders</item>
        <item name="android:layout_marginLeft">@dimen/padding2</item>
        <item name="android:layout_marginRight">@dimen/padding2</item>
        <item name="android:layout_marginTop">@dimen/layout_margin3</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin3</item>
        <item name="android:paddingLeft">@dimen/border</item>
        <item name="android:paddingRight">@dimen/border</item>
        <item name="android:fontFamily">@font/quiz_font1</item>
    </style>

    <!-- Inventions category button style-->
    <style name="CategoryButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_margin">@dimen/layout_margin2</item>
        <item name="android:background">@drawable/borders</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Inventions RadioButtons style-->
    <style name="RadioButtonStyle">
        <item name="android:layout_marginLeft">@dimen/layout_margin5</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:layout_marginBottom">@dimen/padding1</item>
    </style>

    <!-- Inventions view margins-->
    <style name="ViewMarginsStyle">
        <item name="android:layout_marginTop">@dimen/padding2</item>
        <item name="android:layout_marginBottom">@dimen/padding2</item>
        <item name="android:background">@color/inv_view</item>
        <item name="android:layout_height">@dimen/view_height</item>
    </style>

</resources>
